{
  "version": "0.1.0",
  "name": "message-bus-async",
  "main": "index.js",
  "private": false,
  "description": "",
  "repository": {
    "url": "",
    "type": ""
  },
  "license": "",
  "dependencies": {
    "@types/jest": "20.0.1",
    "babel-core": "6.25.0",
    "babel-jest": "20.0.3",
    "babel-preset-es2015": "6.24.1",
    "babel-loader": "7.1.0",
    "jest": "20.0.4",
    "jest-junit": "1.5.1",
    "ts-jest": "20.0.6",
    "ts-loader": "2.2.0",
    "tslint-loader": "3.5.3",
    "tslint": "5.4.3",
    "typescript": "2.3.4",
    "yargs": "8.0.2",
    "express": "4.15.3",
    "webpack": "2.5.1",
    "webpack-dev-server": "2.5.0",
    "es6-promise": "4.1.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "testMatch": [
      "**/*.test.(ts|tsx)"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "./node_modules/ts-jest/preprocessor.js"
    },
    "testResultsProcessor": "./node_modules/jest-junit",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/src/**/*.ts",
      "!**/src/constants.ts",
      "!**/src/index.ts",
      "!**/src/declare.ts",
      "!**/src/types/*.ts",
      "!**/src/**/*.d.ts",
      "!**/node_modules/**",
      "!**/src/common/**/*Exception.ts"
    ],
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "html",
      "cobertura"
    ],
    "coverageDirectory": "./test-results/coverage",
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    },
    "mapCoverage": true
  },
  "jest-junit": {
    "suiteName": "message-bus-async",
    "output": "./test-results/junit.xml",
    "classNameTemplate": "{classname}-{title}",
    "titleTemplate": "{classname}-{title}",
    "usePathForSuiteName": "true"
  },
  "scripts": {
    "build": "webpack",
    "start": "webpack-dev-server --content-base ./dist --hot --no-inline --colors --port 8080 --open",
    "test": "jest",
    "test-watch": "jest --watch"
  }
}